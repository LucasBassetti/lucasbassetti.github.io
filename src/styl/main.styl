figure { margin: 0; }
pre { border: 1px solid #ddd; }


.project .image {
  display: inline-block;
  max-height: 250px;
  max-width: 200px;
  margin: 3px;
  box-shadow: 0 2px 5px #bbb;
  transition: all .3s ease;
}

.project a {
  text-decoration: none;
}

.project a:hover {
  opacity: .9;
}

.project a:focus {
  outline:none;
}

.project a:hover .image {
  box-shadow: 0 5px 8px #bbb;
}

@media screen and (max-width: 768px) {

  .project .galery {
    text-align: center;
  }

  .project .image {
    max-height: 200px;
    max-width: 250px;
  }
}
